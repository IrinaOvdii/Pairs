<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        Your users
      </div>
      <div class="panel-body">

        <div class="row">
          <div class="col-md-7">
            <table class="table table-striped">
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <span><%= user.name %></span>
                  </td>
                  <td>
                    <span><%= user.admin == true ? "Admin" : "Student" %></span>
                  </td>
                  <td>
                    <span><%= link_to "Make admin", user_path(user.id) %></span>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
          <div class="col-md-3 right">
          </div>
        </div>

      </div>
    </div>

    <%= link_to "Generate new pair", pairs_path, class: "btn btn-primary" %>
  </div>
</div>
