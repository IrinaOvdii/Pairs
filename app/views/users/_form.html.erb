<%= form_for(@user) do |f| %>
    <div class="field">
      <%= f.label :name %> <br />
      <%= f.text_area :name %> <br />
    </div>
    <div class="field">
      <%= f.label :admin %> <br />
      <%= f.check_box :admin %> <br />
    </div>
    <div class="actions">
  <%= f.submit "Submit", class: "button small radius" %>
</div>
<% end %>
